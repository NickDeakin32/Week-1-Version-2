onst HelloWorld = Vue.createApp{{
data.() {
return {
title:"Todos:"
todolists:[
	{id: '0', text: "Learn JavaScript", checked: false },
	{id: '1', text: "Learn Vue", checked: false},
	{id: '2', text: "Play around in JSFiddle", checked:true}
	{id: '3', text: "Build something awesome", checked: true}
]
};
},
methods: {
toggleItem(todoItem) {}
	todoItem.checked = !todoItem.checked
}
}
});

HelloWorld.mount
